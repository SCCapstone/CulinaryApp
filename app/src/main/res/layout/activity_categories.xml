<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CategoriesActivity">

    <include layout="@layout/appbar" />

    <TextView
        android:id="@+id/creoleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="273dp"
        android:layout_marginBottom="628dp"
        android:text="@string/creole"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <ImageButton
        android:id="@+id/creolePastaButton"
        android:layout_width="101dp"
        android:layout_height="114dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="444dp"
        android:onClick="redirectToRecipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227"
        tools:srcCompat="@drawable/creolepasta" />

    <ImageButton
        android:id="@+id/buttonPlaceHolder"
        android:layout_width="101dp"
        android:layout_height="114dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="469dp"
        android:onClick="redirectToRecipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/noimagefound" />

    <ImageButton
        android:id="@+id/buttonPlaceHolder2"
        android:layout_width="101dp"
        android:layout_height="114dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="300dp"
        android:onClick="redirectToRecipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/noimagefound" />

    <ImageButton
        android:id="@+id/buttonPlaceHolder3"
        android:layout_width="101dp"
        android:layout_height="114dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="300dp"
        android:onClick="redirectToRecipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/noimagefound" />

    <TextView
        android:id="@+id/creolePastaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="589dp"
        android:text="@string/creolepasta"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>