<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="RecipeInstructionsHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FavsEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_height">72dp</item>-->
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="NavbarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#F8F8F8</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">-10dp</item>
    </style>

    <style name="ProfileLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="ProfileHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A5FF91</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textColor">#FF9036</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--
    <style name="AppTheme.NoActionBar">
